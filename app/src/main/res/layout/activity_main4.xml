<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.kolowaphealth.Main4Activity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your message" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sendEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send feedback"/>
    <LinearLayout
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:gravity="center"
            android:fitsSystemWindows="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/circle"
            android:id="@+id/circleView"

            />
        <TextView
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fitness_health"
            />
        <TextView
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/version_5_0"
          />
        <TextView
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by:"/>
        <TextView
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Kolo"/>


        <Button
            android:background="#ffffff"
            android:id="@+id/john"
            android:clickable="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:textColor="#0000ff"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KoloApps@gmail.com"/>

        <TextView
            android:paddingBottom="90dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2017 KoloApps. All Rights are Reserved"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
    <com.google.android.gms.ads.AdView
        android:fitsSystemWindows="true"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3517746418699749/2144847310">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>